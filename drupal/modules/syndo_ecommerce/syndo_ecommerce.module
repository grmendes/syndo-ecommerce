function syndo_ecommerce_theme($existing, $type, $theme, $path) {
  $variables = array(
    'form__syndo_ecommerce_form' => array(
      'render element' => 'form',
      'template' => 'form--syndo_ecommerce--form',
    ),
  );
  return $variables;
}

function syndo_ecommerce_form_user_register_form_alter(&$form, FormStateInterface $form_state, $form_id) {
    array_unshift($form['#validate'], 'syndo_ecommerce_user_register_form_validate');
    $form['data'] = [];

    $form['data']['cpf'] = [
        '#type' => 'textfield',
        '#required' => TRUE,
        '#title' => t('CPF'),
    ];

    $form['data']['nome'] = [
        '#type' => 'textfield',
        '#required' => TRUE,
        '#title' => t('Full Name'),
    ];

    $form['data']['zipcode'] = [
        '#type' => 'textfield',
        '#required' => TRUE,
        '#title' => t('Zipcode'),
    ];

    $form['data']['birthdate'] = [
        '#type' => 'textfield',
        '#required' => TRUE,
        '#title' => t('Birthdate'),
    ];

    $form['data']['phone'] = [
        '#type' => 'textfield',
        '#required' => TRUE,
        '#title' => t('Phone'),
    ];

    $form['data']['gender'] = [
        '#type' => 'select',
        '#required' => TRUE,
        '#title' => t('Gender'),
        '#options' => [
            'male' => t('Male'),
            'female' => t('Female'),
        ]
    ];
}

